{
  "name": "vesper-pools",
  "version": "3.0.0",
  "description": "Vesper finance holding pools",
  "license": "MIT",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "solhint": "solhint './contracts/**/*.sol'",
    "solhint:fix": "prettier --write 'contracts/**/*.sol'",
    "hardhat": "hardhat",
    "fork": "scripts/fork-chain",
    "lint": "eslint --cache ./test/*",
    "lint:fix": "eslint --cache --fix ./test --ext .js",
    "test": "hardhat test",
    "deploy": "hardhat deploy",
    "verify": "hardhat etherscan-verify --api-key",
    "coverage": "hardhat coverage",
    "prepare": "husky install",
    "build": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile"
  },
  "devDependencies": {
    "@ethersproject/hardware-wallets": "^5.1.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.7",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.0.0",
    "@openzeppelin/test-helpers": "^0.5.11",
    "@types/mocha": "^8.2.2",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "chai": "^4.3.4",
    "chai-almost": "^1.0.1",
    "dotenv": "^8.2.0",
    "eslint": "6.8.0",
    "eslint-config-bloq": "2.3.0",
    "eslint-config-prettier": "6.9.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.20.0",
    "eslint-plugin-jsdoc": "20.3.1",
    "eslint-plugin-mocha": "6.2.2",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prefer-arrow": "1.1.7",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-require-path-exists": "1.1.9",
    "eslint-plugin-standard": "4.0.1",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.1.4",
    "hardhat": "^2.2.1",
    "hardhat-deploy": "^0.7.5",
    "hardhat-log-remover": "^2.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "p-series": "^2.1.0",
    "prettier-plugin-solidity": "^1.0.0-beta.10",
    "solc": "0.8.3",
    "solhint": "^3.3.4",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.16"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=7.0.0"
  }
}
